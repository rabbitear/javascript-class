<script type="text/javascript" src="jquery-1.11.1.min.js"></script>
<script type="text/javascript" src="jquery.cycle.all.js"></script>

<script type="text/javascript" charset="utf-8">
console.log('start');
$(document).ready(function() {
    // ===== start of slideshow code =====
    // side show for proj1
    $('#proj1').cycle({ fx: 'fade', speed: 2500 });
    // side slow for proj2
    $('#proj2').cycle({ fx: 'fade', speed: 1000 });
    // slideslow for proj3
    $('#proj3').cycle({ fx: 'fade', speed: 1500 });
    // slideslow for proj4
    $('#proj4').cycle({ fx: 'fade', speed: 2000 });
    // slideslow for proj5
    $('#proj5').cycle({ fx: 'fade', speed: 2500 });
    // slideslow for proj6
    $('#proj6').cycle({ fx: 'fade', speed: 4000 });
    // slideslow for proj0
    $('#proj0').cycle({ fx: 'fade', speed: 3000 });
    // ===== end of slideslow code =====
    // connect the -links- of each project to its link.
    $('.pics').click(function() {
        window.location=$(this).find("a").attr("href");
        return false;
    });
    // show everything after animations have started.
    $('.pics').fadeIn("slow");
});    
</script>
